<scene>

	<subsystems>

		<subsystem name="Logger" module="ConsoleLogger">
			<received_messages>
				<message type="Engine.LogMessage">
					<receive_policy type="AnyMessageReceivePolicy"/>
				</message>
			</received_messages>
		</subsystem>

		<subsystem name="Graphics" module="OgreRenderSystem">
		
			<received_messages>
				<message type="Engine.MainLoop.UpdateFrameMessage">
					<receive_policy type="FromSingleSenderMessageReceivePolicy">
						<options_section>
							<option name="sender_name" value="Engine"/>
						</options_section>
					</receive_policy>
				</message>
			</received_messages>
		
			<options_section>
				
				<option name="log_level" value="none"/>

				<options_section name="RenderWindow">
					<option name="title" value="Hello window"/>
				</options_section>
				
				<options_section name="ConfigFiles">
					<option name="ogre_plugins_filename" value="plugins.cfg"/>
					<option name="ogre_log_filename" value="Ogre.log"/>
					<option name="ogre_config_filename" value="ogre.cfg"/>
					<option name="ogre_resources_filename" value="resources.cfg"/>
				</options_section>
				
			</options_section>
			
		</subsystem>
	
	</subsystems>

	<entities>

		<entity name="MainCamera">
			<component type="Graphics.Camera" name="Camera">
				<options_section>
					
					<options_section name="InitialTransform">
						<option name="position" value="Vector3(x:0, y:0, z:300)"/>
						<option name="look_at" value="Vector3(x:0, y:0, z:0)"/>
					</options_section>
					
				</options_section>
			</component>
		</entity>

		<entity name="TestRenderable">
			<component name="RenderableComponent" type="Graphics.Renderable">
				<options_section>
					
					<option name="log_level" value="none"/>
					<option name="throw_exception_on_missing_mesh_data" value="false"/>
					
					<options_section name="Material">
						<option name="material_name" value="Test"/>
					</options_section>
					
					<options_section name="InitialTransform">
						<option name="position" value="Vector3(x:50, y:0, z:0)"/>
					</options_section>
					
				</options_section>
			</component>
		</entity>
		
		<entity name="TestRenderable2">
			<component name="RenderableComponent" type="Graphics.Renderable">
				<options_section>
					
					<option name="log_level" value="none"/>
					<option name="throw_exception_on_missing_mesh_data" value="false"/>
					
					<options_section name="Material">
						<option name="material_name" value="Test"/>
					</options_section>
					
					<options_section name="InitialTransform">
						<option name="position" value="Vector3(x:-50, y:0, z:0)"/>
					</options_section>
					
				</options_section>
			</component>
		</entity>
		
		<entity name="LightEntity">
			<component name="LightComponentP" type="Graphics.Light.Point">
				<options_section>
					
					<option name="log_level" value="none"/>
					
					<options_section name="LightSettings">
						<option name="intensity" value="1"/>
						<option name="diffuse_color" value="Colour(r:1, g:0, b:0)"/>
						<option name="specular_color" value="Colour(r:1, g:0, b:0)"/>
					</options_section>
					
					<options_section name="InitialTransform">
						<option name="position" value="Vector3(x:-110, y:0, z:50)"/>
					</options_section>
					
				</options_section>
				</component>
			
			<component name="LightComponentD" type="Graphics.Light.Directional">
				<options_section>
					
					<option name="log_level" value="none"/>
					
					<options_section name="LightSettings">
						<option name="intensity" value="1"/>
						<option name="diffuse_color" value="Colour(r:0, g:1, b:0)"/>
						<option name="specular_color" value="Colour(r:0, g:1, b:0)"/>
					</options_section>
					
					<options_section name="InitialTransform">
						<option name="position" value="Vector3(x:100, y:0, z:0)"/>
						<option name="initial_look_at" value="Vector3(x:0, y:0, z:0)"/>
					</options_section>
					
				</options_section>
			</component>
			
			<component name="LightComponentS" type="Graphics.Light.Spot">
				<options_section>
					
					<option name="log_level" value="none"/>
					
					<options_section name="LightSettings">
						<option name="intensity" value="1"/>
						<option name="diffuse_color" value="Colour(r:0, g:1, b:1)"/>
						<option name="specular_color" value="Colour(r:0, g:1, b:1)"/>
						<option name="spotlight_outer_angle" value="100"/>
					</options_section>
					
					<options_section name="InitialTransform">
						<option name="position" value="Vector3(x:0, y:0, z:100)"/>
						<option name="initial_look_at" value="Vector3(x:0, y:0, z:0)"/>
					</options_section>
					
				</options_section>
			</component>
			
		</entity>
		
	</entities>
	
</scene>