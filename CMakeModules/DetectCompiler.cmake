if ("${CMAKE_CXX_COMPILER_ID}" STREQUAL "Clang")
  set(USED_COMPILER_NAME "Clang")
  exec_program( ${CMAKE_CXX_COMPILER} ARGS ${CMAKE_CXX_COMPILER_ARG1} -dumpversion OUTPUT_VARIABLE USED_COMPILER_VERSION)  
  set(COMPILER_IS_CLANG true)
elseif ("${CMAKE_CXX_COMPILER_ID}" STREQUAL "GNU")
  set(USED_COMPILER_NAME "GCC")
  exec_program( ${CMAKE_CXX_COMPILER} ARGS ${CMAKE_CXX_COMPILER_ARG1} -dumpversion OUTPUT_VARIABLE USED_COMPILER_VERSION)
  set(COMPILER_IS_GCC true)
elseif ("${CMAKE_CXX_COMPILER_ID}" STREQUAL "MSVC")
  set(USED_COMPILER_NAME "MSVC")
  set(USED_COMPILER_VERSION ${MSVC_VERSION})
  set(COMPILER_IS_MSVC true)
endif("${CMAKE_CXX_COMPILER_ID}" STREQUAL "Clang")