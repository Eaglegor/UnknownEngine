{
	"name" : "Red box",
	"description" : "Simple red box asset",
	"options" : [
		{
			"name" : "initial_position",
			"type" : "object",
			"default_value" : {
				"x" : "0",
				"y" : "0",
				"z" : "0"
			}
		},
		{
			"name" : "mass",
			"type" : "value",
			"default_value" : "8"
		}
	],
	"resources" : [
		{
			"name" : "UEMesh",
			"shared" : "true",
			"provider" : "AssimpMeshDataLoader",
			"descriptor" : {
				"model" : "${AssetDir}/models/Cube.obj"
			}
		},
		{
			"name" : "OgreMesh",
			"shared" : "true",
			"provider" : "OgreMeshPtrFromMeshDataProvider",
			"dependencies" : {
				"mesh_data" : "@UEMesh"
			}
		},
		{
			"name" : "PXShape",
			"shared" : "true",
			"provider" : "PhysXBoxShapeProvider",
			"descriptor" : {
				"dimensions" : {
					"x" : "10",
					"y" : "10",
					"z" : "10"
				}
			}
		},
		{
			"name" : "Material",
			"shared" : "true",
			"provider" : "OgreMaterialProvider",
			"descriptor" : {
				"material_file" : "${AssetDir}/materials/test.material"
			}
		}
	],
	"components" : [
		{
			"name" : "Graphics",
			"type" : "OgreRenderable",
			"dependencies" : {
				"material" : "@Material",
				"mesh" : "@OgreMesh"
			}
		},
		{
			"name" : "Physics",
			"type" : "PhysXRigidBody",
			"descriptor" : {
				"mass" : "${mass}",
				"initial_position" : "${initial_position}"
			},
			"dependencies" : {
				"shape" : "@PXShape"
			}
		}
		{
			"name" : "TransformLink",
			"type" : "TransformProxy",
			"dependencies" : {
				"transform_provider" : "@Physics",
				"transform_listener" : "@Graphics"
			}
		}
	]
}